body
  background black

.game-container
  position relative
  margin 20px

.score-tooltip
  position absolute
  left 500px
  top 200px
  color white
  border-radius 3px
  text-align center
  background #bbada0
  .label
    margin 10px 20px
  .score
    font-size 25px
    font-weight 700
    margin 5px 20px

.grid-row
  display flex
  margin-bottom 15px

.grid-cell
  width 106px
  height @width
  border-radius 3px
  background rgba(238, 228, 218, 0.35)
  margin-right 15px

.tile
  position absolute
  left 0
  top 0
  width 107px
  height @width
  line-height @height
  border-radius 3px
  font-size 55px
  text-align center
  user-select none
  -webkit-user-select none
  transition transform 200ms

  &.number-1
  &.number-2
    color #776E65
    background #eee4da
  &.number-4
    color #776E65
    background #ede0c8
  &.number-8
    color #f9f6f2
    background #f2b179
  &.number-16
    color #f9f6f2
    background #f59563
  &.number-32
    color #f9f6f2
    background #f67c5f
  &.number-64
    color #f9f6f2
    background #f65e3b

  &.number-128
  &.number-256
  &.number-512
    font-size 45px
    color #f9f6f2

  &.number-128
    background #edcf72
  &.number-256
    background #edcc61
  &.number-512
    background #edc850
    box-shadow 0 0 30px 10px rgba(243, 215, 116, 0.39683), inset 0 0 0 1px rgba(255, 255, 255, 0.2381)

  &.number-1024
  &.number-2048
    color #f9f6f2
    font-size 35px
    box-shadow 0 0 30px 10px rgba(243, 215, 116, 0.39683), inset 0 0 0 1px rgba(255, 255, 255, 0.2381)

  &.number-1024
    background #edc53f
  &.number-2048
    background #edc22e

